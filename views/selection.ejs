<%include partials/header%>
<div class="container">
    <h1 class="todayheader">বাছাই খবর</h1>
    <hr>
<div class="row" style="display: flex;flex-wrap:wrap;">
<%for(var i=selectedNews.length - 1;i>=0;i--){%>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail" style="padding:0px;">
            <img src="<%=selectedNews[i].image%>">
            <div class="caption">
                <h3 style="font-size:26px;font-weight:600;color:#454545;"><a id="indextitle" href="/news/<%=selectedNews[i]._id%>"><%=selectedNews[i].title%></a></h3>
                <p id="date"><%=selectedNews[i].created.toDateString()%></p>
                <p style="font-size:18px;font-weight:600;color:dimgray;"><%=selectedNews[i].body.substring(0 , 160)%>...</p>
            </div>
            <p class="text-center">
                <a href="/news/<%=selectedNews[i]._id%>" id="button" class="btn btn-primary btn-lg">খবর পড়ুন</a>
            </p>
        </div>
    </div>
    <%};%>
</div>
</div>
<%include partials/footer%>