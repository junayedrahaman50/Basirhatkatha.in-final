<%include partials/header%>
<div class="container">
       <div class="row">
        <h2 id="submit" style="text-align:center;margin-top:20px;">Create a new article!</h2>
        <div style="width:30%;margin:25px auto;">
            <form action="/news" method="POST">
       <div class="form-group">
           <label>Title</label>
            <input  class="form-control" type="text" name="newArticle[title]">
       </div>
       <div class="form-group">
        <label>Image URL</label> 
        <input  class="form-control" type="text" name="newArticle[image]">  
       </div>
        <div class="form-group">
        <label>Tag</label> 
        <input  class="form-control" type="text" name="newArticle[Tag]">  
       </div>
       <div class="form-group">
        <label>Author</label> 
        <input  class="form-control" type="text" name="newArticle[Author]">  
       </div>
       <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" style="resize:none;" name="newArticle[body]" cols="30" rows="10"></textarea>      
       </div>
        <input id="submit" class="btn btn-primary btn-lg" type="submit" value="Add">
    </form>  
        </div>
     </div>
</div>
<%include partials/footer%>