<%include partials/header%>
<div class="container">
        <h2 style="text-align:center;margin-top:20px;"><span id="submit">EDIT</span> <%=foundOne.title%></h2>
        <div style="width:30%;margin:25px auto;">
            <form action="/news/<%=foundOne._id%>?_method=PUT" method="POST">
       <div class="form-group">
           <label>Title</label>
            <input class="form-control" type="text" value="<%=foundOne.title%>" name="newArticle[title]">
       </div>
       <div class="form-group">
        <label>Image URL</label> 
        <input class="form-control" type="text"  value="<%=foundOne.image%>" name="newArticle[image]">  
       </div>
       <div class="form-group">
        <label>Tag</label> 
        <input class="form-control" type="text"  value="<%=foundOne.Tag%>" name="newArticle[Tag]">  
       </div> 
       <div class="form-group">
        <label>Author</label> 
        <input class="form-control" type="text"  value="<%=foundOne.Author%>" name="newArticle[Author]">  
       </div>
       <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" style="resize:none;" name="newArticle[body]" cols="30" rows="10"><%=foundOne.body%></textarea>   
       </div>
        <input id="submit" class="btn btn-primary btn-lg" type="submit" value="Edit">
    </form>  
        </div>
</div>
<%include partials/footer%>